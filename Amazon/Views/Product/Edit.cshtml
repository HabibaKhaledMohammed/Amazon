@model Amazon.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<div class="contact-form p-relative">
                    <div class="sideBg"></div>

    <div class="container ">
        <div class="row m-auto">
            
            <div class="col-md-6 FormSection m-auto">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="contact__form__title">
                            <h2>Edit Product</h2>
                        </div>
                    </div>
                </div>
                <form asp-action="Edit">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <input type="hidden" asp-for="Id" />
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="text" asp-for="Name" placeholder="Product Name">
                        </div>
                        <div class="col-lg-6 col-md-6">
                          <select asp-for="CategoryId" class="form-control nice-myselect mt-1 form-input nice-select" asp-items="ViewBag.category"></select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <select asp-for="VendorId" class="form-control nice-myselect mt-1 mb-4 form-input nice-select" asp-items="ViewBag.vendor"></select>
                
                            <span asp-validation-for="Vendor" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="number" asp-for="PricePerUnit">
                            <span asp-validation-for="PricePerUnit" class="text-danger"></span>
                        </div>
                        <div class="col-lg-12 col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="file" accept="images/*" id="ImageURL" value="/img/product/@Model.ImageURL" name="ImageURL" >
                            <span asp-validation-for="ImageURL" class="text-danger"></span>
                        </div>

                         <div class="col-lg-12 col-md-12">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <textarea asp-for="Description" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                         <button type="submit" class="site-btn">Edit Product</button>
                        
                        </div>



                    </div>
                </form>
@*                <img src="~/img/cherry.jpg" class="img-fluid CherryImg bounce-2" />
*@
            </div>

        </div>
     

    </div>
@*            <div class="editBg"></div>
*@
</div>




        @section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
